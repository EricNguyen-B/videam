<UserControl x:Class="Videam.Views.VideoClipView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Height="30" MinWidth="50">
    <Grid>
        <!-- Main Border (Clip) -->
        <Border Background="Blue" HorizontalAlignment="Stretch" Height="30">
            <TextBlock Text="Clip" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
        </Border>

        <!-- Left Resize Handle -->
        <Thumb Width="5" HorizontalAlignment="Left" Cursor="SizeWE" DragDelta="leftThumbDragDelta" Background="Gray"/>

        <!-- Right Resize Handle -->
        <Thumb Width="5" HorizontalAlignment="Right" Cursor="SizeWE" DragDelta="rightTHumbDragDelta" Background="Gray"/>
    </Grid>
</UserControl>